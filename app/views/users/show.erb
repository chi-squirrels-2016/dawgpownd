<div class="homepage">
  <h1 class="questions-header">All Activity</h1>

  <% unless @activities %>

    <h2>No recent activity</h2>

  <% else %>

    <div class="activities-log"
    <% @activities.each do |activity| %>
      <li><%= erb :'users/_activity', layout: false, locals: { activity: activity } %></li>
    <% end %>
    </div>

    <% unless @questions.empty? %>
    <div class="user-content">
      <h1 class="questions-header">Questions</h1>
      <% @questions.each do |activity| %>
        <li><%= erb :'users/_activity', layout: false, locals: { activity: activity } %></li>
      <% end %>
    </div>
    <% end %>



    <% unless @answers.empty? %>
    <div class="user-content">
      <h1 class="questions-header">Answers</h1>
      <% @answers.each do |activity| %>
        <li><%= erb :'users/_activity', layout: false, locals: { activity: activity } %></li>

      <% end %>
    </div>
    <% end %>



    <% unless @comments.empty? %>
    <div class="user-content">
      <h1 class="questions-header">Comments</h1>


      <% @comments.each do |activity| %>
        <li><%= erb :'users/_activity', layout: false, locals: { activity: activity } %></li>

      <% end %>
    </div>
    <% end %>



    <% unless @votes.empty? %>
    <div class="user-content">
      <h1 class="questions-header">Votes</h1>


      <% @votes.each do |activity| %>
        <li><%= erb :'users/_activity', layout: false, locals: { activity: activity } %></li>
      <% end %>
    </div>
    <% end %>
  <% end %>

</div>
