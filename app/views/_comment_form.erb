  <div id="question-form">
    <form id="new-comment" id="new-comment" action='/questions/<%=@question.id%>/comments/new' method='post' >
    <%=erb :'comments/_end_of_comment' %>
</div>
<% elsif @answer %>
  <div id="question-form">
    <form id="new-comment" action='/answers/<%=@answer.id%>/comments/new' method='post' >
    <%=erb :'comments/_end_of_comment' %>
<% end %>
